<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        .actions {
            display: flex;
            gap: 10px;
        }
    </style>
</head>
<body>
    <h1>All Users</h1>
    <a href="/user/new">Add New User</a>
    <br><br>
    <table>
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% for(let user of users) { %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                    <td class="actions">
                        <!-- Edit Button -->
                        <a href="/user/<%= user.id %>/edit">Edit</a>
                        
                        <!-- Delete Form -->
                        <form method="POST" action="/user/<%= user.id %>?_method=DELETE">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>
